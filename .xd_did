    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            background: linear-gradient(rgba(10, 0, 30, 0.8), rgba(20, 0, 40, 0.9)), 
                        url('https://images.unsplash.com/photo-1532606822553-c3b88934551c?q=80&w=2070') no-repeat center center;
            background-size: cover;
            color: white;
            text-align: center;
            position: relative;
        }
        .card {
            background: rgba(255, 255, 255, 0.1);
            padding: 30px 40px;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            max-width: 600px;
            animation: floatAnimation 6s ease-in-out infinite;
        }
        @keyframes floatAnimation {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-15px); }
            100% { transform: translateY(0px); }
        }
        h1 {
            font-family: 'Noto Nastaliq Urdu', serif;
            font-size: 4rem;
            font-weight: 700;
            color: #FFD700;
            margin: 0;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
        }
        p {
            font-size: 1.2rem;
            font-weight: 300;
            line-height: 1.6;
            margin-top: 20px;
        }
        .stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(1px 1px at 20% 30%, white, transparent),
                radial-gradient(1px 1px at 80% 10%, white, transparent),
                radial-gradient(1px 1px at 50% 50%, white, transparent),
                radial-gradient(2px 2px at 30% 70%, white, transparent),
                radial-gradient(2px 2px at 90% 60%, white, transparent),
                radial-gradient(1px 1px at 10% 90%, white, transparent);
            background-repeat: repeat;
            background-size: 300px 300px;
            animation: twinkle 5s linear infinite;
        }
        @keyframes twinkle {
            from { transform: translateX(0); }
            to { transform: translateX(-300px); }
        }
        .ad-placeholder {
            margin: 25px auto;
            width: 320px;
            min-height: 100px;
            background: rgba(0, 0, 0, 0.5);
            border: 2px dashed #FFD700;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            color: #ccc;
            padding: 10px;
        }
        .ad-placeholder p {
            font-size: 0.9rem;
            margin: 5px 0 0 0;
        }
        @media (max-width: 768px) {
            h1 {
                font-size: 3rem;
            }
            p {
                font-size: 1rem;
            }
            .card {
                padding: 25px 20px;
                width: 90%;
            }
        }
    </style>
